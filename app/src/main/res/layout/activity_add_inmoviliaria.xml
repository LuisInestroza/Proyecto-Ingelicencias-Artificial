<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/house"
        tools:context=".AddInmoviliaria">

    <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="346dp"
            android:layout_height="72dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="DescripciÃ³n"
            android:inputType="textPersonName"
            android:text="@string/etDescripcion"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textColorLink="#000000"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/etPrecio"
            app:layout_constraintHorizontal_bias="0.307"
            app:layout_constraintStart_toStartOf="@+id/etPrecio"
            app:layout_constraintTop_toBottomOf="@+id/etPrecio" />

    <EditText
            android:id="@+id/etPrecio"
            android:layout_width="346dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Precio"
            android:inputType="textPersonName"
            android:text="@string/etPrecio"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textColorLink="#000000"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/etCategoria"
            app:layout_constraintStart_toStartOf="@+id/etCategoria"
            app:layout_constraintTop_toBottomOf="@+id/etCategoria" />

    <Button
            android:id="@+id/btnAddInmueble"
            android:layout_width="140dp"
            android:layout_height="52dp"
            android:layout_marginBottom="5dp"
            android:text="@string/btnAgregarInmueble"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/etDescripcion"
            app:layout_constraintStart_toStartOf="@+id/etDescripcion"
            app:layout_constraintTop_toBottomOf="@+id/etDescripcion"
            tools:text="Agregar" />

    <ImageView
            android:id="@+id/ivInmueble"
            android:layout_width="370dp"
            android:layout_height="300dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_photo_black_24dp" />

    <EditText
            android:id="@+id/etCategoria"
            android:layout_width="346dp"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Categoria"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textColorLink="#000000"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/btnGaleria"
            app:layout_constraintHorizontal_bias="0.446"
            app:layout_constraintStart_toStartOf="@+id/btnCamara"
            app:layout_constraintTop_toBottomOf="@+id/btnCamara" />

    <Button
            android:id="@+id/btnCamara"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="4dp"
            android:drawableBottom="@drawable/baseline_add_a_photo_black_48"
            app:layout_constraintEnd_toEndOf="@+id/ivInmueble"
            app:layout_constraintHorizontal_bias="0.283"
            app:layout_constraintStart_toStartOf="@+id/ivInmueble"
            app:layout_constraintTop_toBottomOf="@+id/ivInmueble" />

    <Button
            android:id="@+id/btnGaleria"
            android:layout_width="wrap_content"
            android:layout_height="69dp"
            android:layout_marginTop="4dp"
            android:drawableBottom="@drawable/baseline_add_photo_alternate_black_48"
            app:layout_constraintEnd_toEndOf="@+id/ivInmueble"
            app:layout_constraintHorizontal_bias="0.652"
            app:layout_constraintStart_toStartOf="@+id/ivInmueble"
            app:layout_constraintTop_toBottomOf="@+id/ivInmueble" />
</android.support.constraint.ConstraintLayout>
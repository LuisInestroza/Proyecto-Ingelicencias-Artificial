<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroung"

        tools:context=".CreateUsuario">

    <EditText
            android:id="@+id/editTextNombreUsuario"
            android:layout_width="325dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="188dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:ems="10"
            android:hint="Nombre de Usuario"
            android:inputType="textPersonName"
            android:text="@string/etNombreUsuario"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#000000"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.673"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <EditText
            android:id="@+id/editTextCorreoUsuario"
            android:layout_width="325dp"
            android:layout_height="38dp"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:hint="Correo Electrónio"
            android:inputType="textPersonName"
            android:text="@string/etCorreoUsuario"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#000000"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/editTextNombreUsuario"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/editTextNombreUsuario"
            app:layout_constraintTop_toBottomOf="@+id/editTextNombreUsuario" />

    <EditText
            android:id="@+id/editTextPasswordUsuario"
            android:layout_width="325dp"
            android:layout_height="45dp"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:hint="Contraseña"
            android:inputType="textPersonName"
            android:text="@string/etPasswordUsuario"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#000000"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/editTextCorreoUsuario"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/editTextCorreoUsuario"
            app:layout_constraintTop_toBottomOf="@+id/editTextCorreoUsuario" />

    <Button
            android:id="@+id/buttonCrearCuenta"
            android:layout_width="179dp"
            android:layout_height="59dp"
            android:layout_marginBottom="96dp"
            android:text="@string/btnCrearCuenta"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/editTextPasswordUsuario"
            app:layout_constraintHorizontal_bias="0.438"
            app:layout_constraintStart_toStartOf="@+id/editTextPasswordUsuario"
            app:layout_constraintTop_toBottomOf="@+id/editTextPasswordUsuario"
            app:layout_constraintVertical_bias="0.31"
            tools:text="Crear " />

</android.support.constraint.ConstraintLayout>